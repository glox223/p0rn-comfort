#!/usr/bin/perl -w
# $Id: p0rn-dblist,v 1.2 2004-05-09 17:30:10 mitch Exp $
#
# dump contents from p0rn.db
#
use strict;
use BerkeleyDB::Hash;
use P0rn::DB;

my $verbose = shift;
if (defined $verbose) {
    if ($verbose ne "-v") {
	unshift @ARGV, $verbose;
	$verbose = 0;
    }
}

my $hash = opendb(shift);

if ($verbose) {
    print "$hash->{$_}\t$_\n" foreach (sort keys %{$hash});
} else {
    print "$_\n" foreach (sort keys %{$hash});
}

untie %{$hash};


